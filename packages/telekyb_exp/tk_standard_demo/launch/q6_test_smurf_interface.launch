<!-- -->

<launch>
	<!-- REQUIED by mk_interface -->
	<arg name="qcID" value="6" />
	<arg name="firmware" value="3908" />
	<arg name="serial_device1" value ="usb-FTDI_FT232R_USB_UART_A40078KA-if00-port0 " />
	<arg name="serial_device2" value ="usb-FTDI_FT232R_USB_UART_A40078KA-if00-port0 " />

	<!-- REQUIED by telekyb_core -->
	<arg name="rotortype" value="Quadcopter" />
	<arg name="takeOffHeight" value="-1" />
	<arg name="landHeight" value="-0.25" />
	<arg name="initialMass" value="0.7" />
	<arg name="emergencyThrust" value="60" />

	<!-- Vicon -->
<!--r	<node name="ViconEmulator_$(arg qcID)" pkg="telekyb_vicon_emulator" type="vicon_emulator" args="$(arg qcID)"/>-->


	<!-- SMURF ### ABILITATE to have 2nd serial -->
	<node name="SmurfInterface_$(arg qcID)" pkg="tk_smurf_interface" type="smurf_interface">
		<param name="IMUDataProcessor/tInitialDriftEstim" value="true" />
		<param name="IMUDataProcessor/tTopicName" value="/TeleKyb/SmurfInterface_$(arg qcID)/Sensor/Imu" />
		<param name="IMUCalibrator/tDriftEstimTimeout" value="30" />
		<param name="IMUCalibrator/tDriftEstimWindowSize" value="100" />
		<param name="IMUCalibrator/tDriftEstimVarianceThreshold" value="0.01" />
		<param name="SerialIMUDevice/tDeviceName" value="/dev/serial/by-id/$(arg serial_device2)" />
		<param name="SerialIMUDevice/tBaudRate" value="BAUD115200" />
	</node>


	
	

</launch>
